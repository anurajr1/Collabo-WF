<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="match_parent"
            android:text="Today's Shift Overview"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:padding="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@color/sapUiNegativeElement_mng">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/mng_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4"
                        android:textColor="@color/sapWhite"
                        android:textSize="50dp" />

                    <TextView
                        android:id="@+id/mng_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mng_count"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="-20dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@color/sapWhite"
                        android:text="Morning "
                        android:textSize="15dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@color/sapUiCriticalElement_afternoon">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/aft_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4"
                        android:textColor="@color/sapWhite"
                        android:textSize="50dp" />

                    <TextView
                        android:id="@+id/aft_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/aft_count"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="-20dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="@color/sapWhite"
                        android:text="Afternoon "
                        android:textSize="15dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@color/sapUiPositiveElement_night">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/night_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4"
                        android:textColor="@color/sapWhite"
                        android:textSize="50dp" />

                    <TextView
                        android:id="@+id/night_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/night_count"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="-20dp"
                        android:padding="5dp"
                        android:textColor="@color/sapWhite"
                        android:text="Night "
                        android:textSize="15dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/sapUiNeutralElement_grey">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/leave_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="4"
                        android:textColor="@color/sapWhite"
                        android:textSize="50dp" />

                    <TextView
                        android:id="@+id/leave_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/leave_count"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="-20dp"
                        android:padding="5dp"
                        android:textColor="@color/sapWhite"
                        android:text="On Leave "
                        android:textSize="15dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



    </android.support.design.card.MaterialCardView>
</RelativeLayout>
